{
  "version": "1.5.2",
  "short_name": "promocot",
  "name": "Промокот",
  "description": "Выгодные предложения онлайн-магазинов",
  "manifest_version": 2,
  "homepage_url": "https://promocot.ru",
  "browser_action": {
    "default_icon": {
      "16": "logo-16.png",
      "48": "logo-48.png",
      "128": "logo-128.png"
    },
    "default_popup": "index.html",
    "default_title": "Промокот"
  },
  "icons": {
    "16": "logo-16.png",
    "48": "logo-48.png",
    "128": "logo-128.png"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": [
    "http://*/*",
    "https://*/*",
    "contextMenus",
    "cookies",
    "notifications",
    "tabs",
    "webNavigation",
    "unlimitedStorage",
    "storage"
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'"
}
